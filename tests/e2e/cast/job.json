{
    "extracts": [
        {
            "name": "extract-test",
            "data_format": "csv",
            "location": "tests/e2e/cast/input_data.csv",
            "method": "batch",
            "options": {
                "delimiter": ",",
                "header": true,
                "inferSchema": false
            },
            "schema": "tests/e2e/cast/input_schema.json"
        }
    ],
    "transforms": [
        {
            "name": "transform-test",
            "upstream_name": "extract-test",
            "functions": [
                { 
                    "function": "cast", 
                    "arguments": { 
                        "columns": {
                            "id": "integer",
                            "age": "integer",
                            "price": "decimal(5,2)",
                            "is_active": "boolean",
                            "join_date": "date"
                        }
                    }
                }
            ]
        }
    ],
    "loads": [
        {
            "name": "load-test",
            "upstream_name": "transform-test",
            "data_format": "csv",
            "location": "tests/e2e/cast/csv",
            "method": "batch",
            "mode": "overwrite",
            "options": {
                "header": true
            },
            "schema_location": "tests/e2e/cast/schema_output.json"
        }
    ]
}
