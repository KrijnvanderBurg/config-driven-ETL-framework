                            { "function": "select", "arguments": {"columns": ["name", "email", "signup_date", "order_id", "order_date", "amount"]} }
                        ]
                    }
                ],
                "loads": [
                    {
                        "name": "load-customer-orders",
                        "upstream_name": "transform-join-orders",
                        "data_format": "csv",
                        "location": "examples/customer_orders/output",
